.pc_header
  .pc_header__contents
    .pc_header__contents__content
      %h1.pc_header__contents__content__box
        =link_to root_path do
          =image_tag "logo.png",alt: "ロゴ"
      .pc_header__contents__content__search-box
        %form
          %input.pc_header__contents__content__search-box__input{name: "",:placeholder => "キーワードから探す", :type =>"", :value => ""}/
          %button{type: "submit"}
            .pc_header__contents__content__search-box__icon
              =image_tag "icon-search 1.png",alt: "ロゴ"

    .pc_header__contents__nav-list
      .pc_header__contents__nav-list__left
        %ul
          .pc_header__contents__nav-list__left__category
            %li.pc_header__contents__nav-list__left__category__li
              =link_to category_get_category_children_items_path(@items), class: "categories" do
                カテゴリー
          .pc_header__contents__nav-list__left__brand
            %li.pc_header__contents__nav-list__left__brand__li
              =link_to "#" do
                ブランド
      .pc_header__contents__nav-list__right
        %ul
          .pc_header__contents__nav-list__right__topic
            .pc_header__contents__nav-list__right__topic__li
              =link_to "#" do
                お知らせ
          .pc_header__contents__nav-list__right__necessary     
            .pc_header__contents__nav-list__right__necessary__li
              =link_to "#" do
                やることリスト

          .pc_header__contents__nav-list__right__login
        -if user_signed_in?
          .pc_header__contents__nav-list__right__login
            .pc_header__contents__nav-list__right__login__li
              =link_to destroy_user_session_path, method: "DELETE" do
                ログアウト

          .pc_header__contens__nav-list__right__new
            .pc_header__contents__nav-list__right__new__li
              =link_to user_path(current_user[:id]) do
                マイページ     

        -else
          .pc_header__contents__nav-list__right__login
            %li.pc_header__contents__nav-list__right__login__li
              =link_to new_user_session_path do
                ログイン

          .pc_header__contens__nav-list__right__new
            %li.pc_header__contents__nav-list__right__new__li
              =link_to new_user_registration_path, method: :get do
                新規会員登録



