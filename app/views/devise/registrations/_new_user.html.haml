.Single__container__main
  .Single__container__main__head
    %h2.member_new 会員情報入力
  .Single__container__main__inner
    .Single__container__main__inner__content
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-container
          .form-group
            = f.label :nick_name, "ニックネーム"
            %span.form-require 必須
            %br/
            = f.text_field :nick_name, autofocus: true, placeholder: "例) 飯田っち"
          .form-group
            = f.label :email,"メールアドレス" 
            %span.form-require 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
          .form-group
            = f.label :password
            %span.form-require 必須
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
          .form-group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
            %ul.has-error-text
              %li#password-error.has-error パスワードを入力してください
            %p.form-info-text
              ※ 英字と数字の両方を含めて設定してください
            .form-password-revelation-toggle
              .checkbox-default
                %input#reveal_password{:type => "checkbox"}/
                %i.icon-check
                %label{:for => "reveal_password"} パスワードを表示する
              .form-password-revelation-revealed-password-container
                %span.form-password-revelation-revealed-password
          .form-group
            .formField__label--normal
              = f.label :birth_day, "生年月日"
              %span.form-require 必須
              %br/
            .formField__label--normal
              -# = raw sprintf(f.date_select(:birth_day,use_month_numbers: true,start_year: 1930,end_year: (Time.now.year - 18),default: Date.new(1989, 1, 1),date_separator: '%s'),'年 ', '月 ') + '日'
          .actions
            = f.submit "次へ進む"
        = render "devise/shared/links"